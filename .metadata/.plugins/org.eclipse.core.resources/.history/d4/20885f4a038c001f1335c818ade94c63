import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import com.digimart.project.ConnectionProvider;

@WebServlet("/UpdateCartServlet")
public class UpdateCartServlet extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String action = request.getParameter("action");
        int productId = Integer.parseInt(request.getParameter("product_id"));
        String userId = "1"; // Replace with actual user ID retrieval logic

        try {
            Connection con = ConnectionProvider.getCon();
            PreparedStatement ps;

            if ("increase".equals(action)) {
                // Increase the quantity
                ps = con.prepareStatement("UPDATE Order_Items SET quantity = quantity + 1 WHERE product_id = ? AND order_id IN (SELECT order_id FROM Orders WHERE user_id = ?)");
            } else if ("decrease".equals(action)) {
                // Decrease the quantity
                ps = con.prepareStatement("UPDATE Order_Items SET quantity = GREATEST(quantity - 1, 1) WHERE product_id = ? AND order_id IN (SELECT order_id FROM Orders WHERE user_id = ?)");
            } else {
                response.sendRedirect("cart.jsp?msg=error");
                return;
            }

            ps.setInt(1, productId);
            ps.setString(2, userId);
            ps.executeUpdate();

            // Redirect with a success message
            response.sendRedirect("myCart.jsp?msg="+action+"");
        } catch (SQLException e) {
            e.printStackTrace();
            response.sendRedirect("error.jsp"); // Redirect to an error page
        }
    }
}
