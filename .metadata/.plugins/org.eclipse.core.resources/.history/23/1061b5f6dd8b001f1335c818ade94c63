                    <input class="input-style form-control" type="text" name="category" value="<%= category %>" required />
                </div>

                <div class="form-group">
                    <label>Price per Unit</label>
                    <input class="input-style form-control" type="number" name="price_per_unit" value="<%= pricePerUnit %>" required step="0.01" />
                </div>

                <div class="form-group">
                    <label>Unit</label>
                    <input class="input-style form-control" type="text" name="unit" value="<%= unit %>" required />
                </div>

                <div class="form-group">
                    <label>Available Quantity</label>
