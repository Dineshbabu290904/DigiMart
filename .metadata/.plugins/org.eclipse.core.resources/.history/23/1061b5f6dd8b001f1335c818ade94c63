                <input type="hidden" name="product_id" value="<%= productId %>"> <!-- Hidden field for product ID -->

                <div class="form-group">
                    <label>User ID</label>
                    <input class="input-style form-control" type="number" name="user_id" value="<%= userId %>" required />
                </div>

                <div class="form-group">
                    <label>Name</label>
                    <input class="input-style form-control" type="text" name="name" value="<%= name %>" required />
                </div>

