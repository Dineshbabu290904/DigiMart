        <div class="row card-container">
            <%
                int userId = (int) session.getAttribute("user_id");
                Connection con = null;
                PreparedStatement stmt = null;
                ResultSet rs = null;
                double totalCartPrice = 0.0;

                try {
                    con = ConnectionProvider.getCon();
                    String query = "SELECT p.product_id, p.name, p.description, p.category, p.available_qty, p.unit, c.quantity, p.price_per_unit, c.price, p.image " +
                                   "FROM cart c JOIN products p ON c.product_id = p.product_id " +
                                   "WHERE c.user_id = ? AND c.status = 'active'";
                    stmt = con.prepareStatement(query);
                    stmt.setInt(1, userId);
                    rs = stmt.executeQuery();

                    while (rs.next()) {
                        String productName = rs.getString("name");
                        String description = rs.getString("description");
                        String category = rs.getString("category");
                        BigDecimal availableQty = rs.getBigDecimal("available_qty");
                        String unit = rs.getString("unit");
                        int quantity = rs.getInt("quantity");
                        double pricePerUnit = rs.getDouble("price_per_unit");
                        double totalPrice = rs.getDouble("price");
                        byte[] imageBytes = rs.getBytes("image");
                        String base64Image = Base64.getEncoder().encodeToString(imageBytes);

                        totalCartPrice += totalPrice;
            %>
            <div class="col-md-4">
    <div class="card">
        <img src="data:image/jpg;base64,<%= Base64.getEncoder().encodeToString(rs.getBytes("image")) %>" class="card-img-top" alt="<%= productName %>">
        <div class="card-body">
            <h5 class="card-title"><%= productName %></h5>
            <p class="card-text"><strong>Description:</strong> <%= rs.getString("description") %></p>
            <p class="card-text"><strong>Category:</strong> <%= rs.getString("category") %></p>
            <p class="card-text"><strong>Available Quantity:</strong> <%= rs.getInt("available_qty") %> <%= rs.getString("unit") %></p>
            <p class="card-text"><strong>Quantity:</strong> <%= rs.getInt("quantity") %></p>
            <p class="card-text"><strong>Price Per Unit:</strong> ₹<%= String.format("%.2f", rs.getBigDecimal("price_per_unit").doubleValue()) %></p>
            <p class="card-text"><strong>Total Price:</strong> ₹<%= String.format("%.2f", price * rs.getInt("quantity")) %></p>
            
            <!-- Increase Quantity -->
            <form action="UpdateCartServlet" method="post" style="display:inline;">
                <input type="hidden" name="product_id" value="<%= rs.getInt("product_id") %>" />
                <input type="hidden" name="action" value="increase" />
                <button type="submit" class="quantity-button">Increase Quantity</button>
            </form>

            <!-- Decrease Quantity -->
            <form action="UpdateCartServlet" method="post" style="display:inline;">
                <input type="hidden" name="product_id" value="<%= rs.getInt("product_id") %>" />
                <input type="hidden" name="action" value="decrease" />
                <button type="submit" class="quantity-button">Decrease Quantity</button>
            </form>

            <form action="RemoveFromCartServlet" method="post" style="display:inline;">
                <input type="hidden" name="product_id" value="<%= rs.getInt("product_id") %>" />
                <button type="submit" class="remove-button">Remove</button>
            </form>
        </div>
    </div>
</div>

            <%
                    }
                } catch (SQLException e) {
                    e.printStackTrace();
                } finally {
                    try {
                        if (rs != null) rs.close();
                        if (stmt != null) stmt.close();
                        if (con != null) con.close();
                    } catch (SQLException e) {
                        e.printStackTrace();
                    }
                }
            %>
