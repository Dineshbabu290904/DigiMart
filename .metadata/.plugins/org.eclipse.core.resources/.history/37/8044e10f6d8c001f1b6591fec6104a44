<body>
    <div class="container">
        <h1>My Cart <i class='fas fa-cart-arrow-down'></i></h1>
        <%
        String msg = request.getParameter("msg");
        if (msg != null) {
            if ("increase".equals(msg)) {
        %>
            <h3 class="alert">Product Quantity successfully Increased!</h3>
        <%
            } else if ("decrease".equals(msg)) {
        %>
            <h3 class="alert">Product Quantity successfully decreased!</h3>
        <%
            } else if ("removed".equals(msg)) {
        %>
            <h3 class="alert">Product successfully Removed!</h3>
        <%
            } else if ("not_found".equals(msg)) {
        %>
            <h3 class="alert">Product not found in your cart!</h3>
        <%
            } else if ("error".equals(msg)) {
        %>
            <h3 class="alert">Something went wrong! Try Again!</h3>
        <%
            }
        }
        %>
        <%
            double totalAmount = 0.0;
            String userId = session.getAttribute("user_id").toString(); 

            try {
                Connection con = ConnectionProvider.getCon();
                PreparedStatement ps = con.prepareStatement(
                    "SELECT p.product_id, p.name, p.category, p.price_per_unit, p.image, c.quantity " +
                    "FROM Order_Items c " +
                    "JOIN Products p ON c.product_id = p.product_id " +
                    "WHERE c.order_id IN (SELECT order_id FROM Orders WHERE user_id = ?)"
                );
                ps.setString(1, userId);
                ResultSet rs = ps.executeQuery();

                if (!rs.isBeforeFirst()) {
        %>
                    <h3 class="alert">Your cart is empty!</h3>
        <%
                } else {
        %>
                    <h3 class="alert">Items in your cart:</h3>
                    <div class="row">
        <%
                    while (rs.next()) {
                        int productId = rs.getInt("product_id");
                        String productName = rs.getString("name");
                        String category = rs.getString("category");
                        double price = rs.getBigDecimal("price_per_unit").doubleValue();
                        int quantity = rs.getInt("quantity");
                        double subTotal = price * quantity;
                        totalAmount += subTotal;
        %>
                        <div class="col-md-4">
                            <div class="card">
                                <img src="data:image/jpg;base64,<%= Base64.getEncoder().encodeToString(rs.getBytes("image")) %>" alt="Product Image">
                                <div class="card-body">
                                    <h5 class="card-title"><%= productName %></h5>
                                    <p class="card-text">Category: <%= category %></p>
                                    <p class="card-text">Price: <i class="fa fa-inr"></i> <%= price %></p>
                                    <p class="card-text">Quantity: <%= quantity %></p>
                                    <p class="card-text">Sub Total: <i class="fa fa-inr"></i> <%= subTotal %></p>

                                    <!-- Increase and Decrease Quantity -->
                                    <form action="UpdateCartServlet" method="post" style="display:inline;">
                                        <input type="hidden" name="product_id" value="<%= productId %>">
                                        <button type="submit" name="action" value="increase" class="btn btn-success btn-sm">
                                            <i class='fas fa-plus-circle'></i>
                                        </button>
                                        <button type="submit" name="action" value="decrease" class="btn btn-warning btn-sm">
                                            <i class='fas fa-minus-circle'></i>
                                        </button>
                                    </form>

                                    <!-- Remove Product from Cart -->
                                    <form action="RemoveFromCartServlet" method="post" style="display:inline;">
                                        <input type="hidden" name="product_id" value="<%= productId %>">
                                        <button type="submit" class="btn btn-danger btn-sm">Remove <i class='fas fa-trash-alt'></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
        <%
                    }
        %>
                    </div>
                    <h3 style="color: yellow;">Total: <i class="fa fa-inr"></i> <%= totalAmount %></h3>
                    <div style="text-align: center;">
                        <a href="viewAddresses.jsp" class="btn btn-primary">Proceed to Order</a>
                    </div>
        <%
                }
            } catch (SQLException e) {
                e.printStackTrace();
            }
        %>
    </div>

