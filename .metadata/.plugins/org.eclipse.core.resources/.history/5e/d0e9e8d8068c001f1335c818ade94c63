<%@ page import="com.digimart.project.ConnectionProvider" %>
<%@ page import="java.sql.*" %>
<%@ page import="javax.servlet.http.HttpSession" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ include file="header.jsp" %>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Manage Addresses</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: yellow;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        .alert {
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>
<%
	String userId = session.getAttribute("user_id");
    Connection conn = null;
    ResultSet rs = null;

    try {
        conn = ConnectionProvider.getCon();
        // Retrieve existing addresses for the user
        String selectAddressQuery = "SELECT * FROM Addresses WHERE user_id = ?";
        PreparedStatement selectAddressStmt = conn.prepareStatement(selectAddressQuery);
        selectAddressStmt.setInt(1, userId);
        rs = selectAddressStmt.executeQuery();

        if (!rs.isBeforeFirst()) { // No addresses found
%>
            <h3 class="alert">No addresses found. Please add a new address below.</h3>
<%
        }
%>
        <h2>Existing Addresses</h2>
        <table>
            <thead>
                <tr>
                    <th>Address ID</th>
                    <th>Street</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal Code</th>
                    <th>Country</th>
                    <th>Select</th>
                </tr>
            </thead>
            <tbody>
<%
        while (rs != null && rs.next()) {
            int addressId = rs.getInt("address_id");
            String street = rs.getString("street");
            String city = rs.getString("city");
            String state = rs.getString("state");
            String postalCode = rs.getString("postal_code");
            String country = rs.getString("country");
%>
                <tr>
                    <td><%= addressId %></td>
                    <td><%= street %></td>
                    <td><%= city %></td>
                    <td><%= state %></td>
                    <td><%= postalCode %></td>
                    <td><%= country %></td>
                    <td>
                        <form action="CheckoutServlet" method="post">
                            <input type="hidden" name="address_id" value="<%= addressId %>">
                            <button type="submit">Select</button>
                        </form>
                    </td>
                </tr>
<%
        }
%>
            </tbody>
        </table>

        <h2>Add a New Address</h2>
        <form action="AddAddressServlet" method="post">
            <input type="text" name="street" placeholder="Street" required><br>
            <input type="text" name="city" placeholder="City" required><br>
            <input type="text" name="state" placeholder="State" required><br>
            <input type="text" name="postal_code" placeholder="Postal Code" required><br>
            <input type="text" name="country" placeholder="Country" required><br>
            <button type="submit">Add Address</button>
        </form>
<%
    } catch (SQLException e) {
        e.printStackTrace();
%>
        <h3 class="alert">Error retrieving addresses!</h3>
<%
    } finally {
        if (rs != null) try { rs.close(); } catch (SQLException ignore) {}
        if (conn != null) try { conn.close(); } catch (SQLException ignore) {}
    }
%>
</body>
</html>
