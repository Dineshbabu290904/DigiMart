        String msg = request.getParameter("msg");
        if (msg != null) {
            if ("addressAdded".equals(msg)) {
	    %>
	    <div class="alert alert-warning" role="alert">address added. find new address below.</div>
    	<%
	           } else if ("error".equals(msg)) {
	    %>
