	    <%
	            }
	        }
	    %>
    
    <%
        String userId = session.getAttribute("user_id").toString();
        Connection conn = null;
        ResultSet rs = null;

        try {
            conn = ConnectionProvider.getCon();
            // Retrieve existing addresses for the user
            String selectAddressQuery = "SELECT * FROM Addresses WHERE user_id = ?";
            PreparedStatement selectAddressStmt = conn.prepareStatement(selectAddressQuery);
            selectAddressStmt.setString(1, userId);
            rs = selectAddressStmt.executeQuery();

            if (!rs.isBeforeFirst()) { // No addresses found
    %>
                <div class="alert alert-warning" role="alert">No addresses found. Please add a new address below.</div>
    <%
            }
    %>
    
    <h2 class="mt-4">Existing Addresses</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Address ID</th>
                <th>Street</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
    <%
            while (rs != null && rs.next()) {
                int addressId = rs.getInt("address_id");
                String street = rs.getString("street");
                String city = rs.getString("city");
                String state = rs.getString("state");
                String postalCode = rs.getString("postal_code");
                String country = rs.getString("country");
    %>
                <tr>
                    <td><%= addressId %></td>
                    <td><%= street %></td>
                    <td><%= city %></td>
                    <td><%= state %></td>
                    <td><%= postalCode %></td>
                    <td><%= country %></td>
                    <td>
                        <form action="CheckoutServlet?address_id=${addressId}" method="post" class="d-inline">
                            <input type="hidden" name="address_id" value="${addressId }">
                            <%System.out.println(request.getParameter("address_id"));
                             %>
                            <button type="submit" class="btn btn-primary btn-sm">Select</button>
                        </form>
                    </td>
                </tr>
    <%
            }
    %>
        </tbody>
    </table>

    <h2 class="mt-4">Add a New Address</h2>
    <form action="AddAddressServlet" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label for="street">Street</label>
